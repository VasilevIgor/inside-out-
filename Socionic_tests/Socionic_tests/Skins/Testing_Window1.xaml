<Window x:Class="Socionic_tests.Skins.Testing_Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Socionic_tests.Skins"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Testing_Window1"
        Width="720"
        Height="480"
        MinWidth="560"
        MinHeight="420"
        DataContext="{Binding Testing,
                              Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Icon="35rt.png">
    <Window.Background>
        <ImageBrush ImageSource="pic1.jpg" Stretch="UniformToFill" TileMode="None" />
    </Window.Background>
    <Grid Margin="20 20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="30" />
            <RowDefinition Height="100" />
            <RowDefinition Height="40" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Border Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                BorderBrush="#E1C889"
                BorderThickness="1" Background="White"  />
        <TextBlock Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Foreground="White"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Text="Question1?"
                   TextAlignment="Center" />
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14">
            choose answer
        </TextBlock>
        <ComboBox Grid.Row="2"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Margin="80 0"
                  VerticalAlignment="Center"
                  FontSize="14">
            <ComboBoxItem Content="answer1" />
            <ComboBoxItem Content="answer2" />
            <ComboBoxItem Content="answer3" />
            <ComboBoxItem Content="answer4" />
        </ComboBox>
        <Button Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                 Foreground="White"
                Background="#E1C889"
                MinWidth="100"
                MinHeight="30"
                MaxWidth="100"
                MaxHeight="30"
                VerticalAlignment="Center"
                Command="{Binding GoToReccomendation}"
                Content="Next"
                Cursor="Hand"
                FontSize="14" />
    </Grid>
</Window>
