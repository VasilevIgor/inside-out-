<Window x:Class="Socionic_tests.Skins.RecommendationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Socionic_tests.Skins"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="RecommendationWindow"
        Width="720"
        Height="440"
        MinWidth="560"
        MinHeight="430"
        DataContext="{Binding Reccomendation,
                              Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Icon="35rt.png">
    <Window.Background>
        <ImageBrush ImageSource="pic1.jpg" Stretch="UniformToFill" TileMode="None" />
    </Window.Background>
    <Grid Margin="20 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="200" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
               BorderBrush="#E1C889"
                BorderThickness="1" Background="White" />
        <TextBlock Grid.Row="1"
                   Grid.RowSpan="2"
                   Foreground="White"
                   FontWeight="Bold"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Text="YOUR RESULTS" />
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="14"
                   Text="recommendation1"
                   TextAlignment="Center" />
        <Button Grid.Row="5"
                Grid.Column="0"
                Foreground="White"
                   Background="#E1C889"
                Grid.ColumnSpan="2"
                MinWidth="100"
                MinHeight="30"
                MaxWidth="100"
                MaxHeight="30"
                VerticalAlignment="Center"
                Command="{Binding GoTestAgain}"
                Content="Again"
                Cursor="Hand"
                FontSize="14" />
    </Grid>
</Window>
