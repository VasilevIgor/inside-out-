<Window x:Class="Socionic_tests.Skins.Creation_Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Socionic_tests.Skins"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Creation_Window1"
        Width="720"
        Height="440"
        MinWidth="620"
        MinHeight="420"
        mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Height="20"
                      FontSize="14"
                      Header="Menu">
                <MenuItem Height="20"
                          FontSize="14"
                          Header="Profile" />
                <MenuItem Height="20"
                          FontSize="14"
                          Header="New test">
                    <MenuItem Height="20"
                              FontSize="14"
                              Header="Take" />
                    <MenuItem Height="20"
                              FontSize="14"
                              Header="Create" />
                </MenuItem>
                <MenuItem Height="20"
                          FontSize="14"
                          Header="Log out" />
                <MenuItem Height="20"
                          FontSize="14"
                          Header="About"
                          Cursor="Help">
                    <MenuItem Height="20"
                              FontSize="14"
                              Header="Read" />
                </MenuItem>
            </MenuItem>
        </Menu>
        <Grid Margin="20 20" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="230" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="20 20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="1"
                               Height="18"
                               Margin="7 0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Text="Section name">
                    </TextBlock>
                    <ComboBox Grid.Row="1"
                              Grid.Column="1"
                              Height="22"
                              VerticalAlignment="Center"
                              FontSize="14" />
                    <TextBlock Grid.Row="2"
                               Height="18"
                               Margin="7 0"
                               VerticalAlignment="Center"
                               FontSize="14" Text="Test name">
                    </TextBlock>
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Height="22"
                             VerticalAlignment="Center"
                             FontSize="14" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Height="22"
                             VerticalAlignment="Center"
                             FontSize="14" />
                    <TextBlock Grid.Row="3"
                               Height="18"
                               Margin="7 0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Text="Number of questions">
                    </TextBlock>
                    <TextBlock Grid.Row="4"
                               Height="18"
                               Margin="7 0"
                               VerticalAlignment="Center"
                               FontSize="14" 
                               Text="Number of answers for each question">
                    </TextBlock>
                    <TextBlock Grid.Row="7"
                               Height="18"
                               Margin="7 0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Text="Number of recommendations">
                    </TextBlock>
                    <Slider Grid.Row="3"
                            Grid.Column="1"
                            VerticalAlignment="Center" />
                    <Slider Grid.Row="4"
                            Grid.Column="1"
                            VerticalAlignment="Center" />
                    <Slider Grid.Row="7"
                            Grid.Column="1"
                            VerticalAlignment="Center" />
                </Grid>
            </StackPanel>
            <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               HorizontalAlignment="Center"
                               FontSize="14"
                               TextAlignment="Center" 
                               Text="CREATION MODE">
            </TextBlock>
            <Border Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    BorderBrush="Black"
                    BorderThickness="1" >
            </Border>
            <Button Grid.Row="3"
                    MinWidth="80"
                    MaxWidth="100"
                    FontSize="14" 
                    VerticalAlignment="Center"
                    Content="Next">
            </Button>
            <Button Grid.Row="3"
                    Grid.Column="1"
                    MinWidth="80"
                    MaxWidth="100"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Content="Cancel">
            </Button>
        </Grid>
    </DockPanel>
</Window>
