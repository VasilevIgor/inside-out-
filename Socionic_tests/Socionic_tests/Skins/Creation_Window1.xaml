<Window x:Class="Socionic_tests.Skins.Creation_Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Socionic_tests.Skins"
        mc:Ignorable="d"
        Title="Creation_Window1" Height="280" Width="500" MinWidth="400" MinHeight="250">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Menu" FontSize="14" Height="20">
                <MenuItem Header="Profile" FontSize="14" Height="20"/>
                <MenuItem Header="New test" FontSize="14" Height="20">
                    <MenuItem Header="Take" FontSize="14" Height="20"/>
                    <MenuItem Header="Create" FontSize="14" Height="20"/>
                </MenuItem>
                <MenuItem Header="Log out"  FontSize="14" Height="20"/>
                <MenuItem Header="About" FontSize="14" Height="20">
                    <MenuItem Header="read" FontSize="14" Height="20"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <Grid Margin="20 20" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="1" MaxWidth="100" MinWidth="80" VerticalAlignment="Top" FontSize="14">Next</Button>
            <Button Grid.Row="1" Grid.Column="1" MaxWidth="100" MinWidth="80" VerticalAlignment="Top" FontSize="14">Cancel</Button>
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="14">Creation mode</TextBlock>
                    <TextBlock Grid.Row="1" Margin="7 0" VerticalAlignment="Center" FontSize="14" Height="18">Section</TextBlock>
                    <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" FontSize="14" Height="22"/>
                    <TextBlock Grid.Row="2" Margin="7 0" VerticalAlignment="Center" FontSize="14" Height="18">Test</TextBlock>
                    <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" FontSize="14" Height="22"/>
                    <TextBlock Grid.Row="3" Margin="7 0" VerticalAlignment="Center" FontSize="14" Height="18">Number of questions</TextBlock>
                    <Slider Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"></Slider>
                </Grid>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
